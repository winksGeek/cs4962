<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="winkler.devon.battleship" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".BattleshipMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BattleshipGameActivity"
            android:label="@string/title_activity_battleship_game" >
        </activity>
        <activity
            android:name=".BlindActivity"
            android:label="@string/title_activity_blind" >
        </activity>
        <activity
            android:name=".WinScreen"
            android:label="@string/title_activity_win_screen" >
        </activity>
        <activity
            android:name=".InfoFormActivity"
            android:label="@string/title_activity_info_form" >
        </activity>
        <activity
            android:name=".BattleshipGameDisplayActivity"
            android:label="@string/title_activity_battleship_game_display" >
        </activity>
    </application>

</manifest>
